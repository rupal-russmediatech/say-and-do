{% extends '::fullwidth.html.twig' %}


{% block breadcrumb %}
    <li>Skelbti naują pažadą</li>
{% endblock %}

{% block header_title %}
    Skelbti naują pažadą
{% endblock %}

{% block inner_content %}

    <section class="section1">
        <div class="container clearfix">
            <div class="content pull-right col-lg-8 col-md-8 col-sm-8 col-xs-12 clearfix">

                <!-- SLIDE POST -->
                <article class="blog-wrap text-center">
                    <h4 class="title">
                        <span>Pažado įrodymas</span>
                    </h4>

                    <div class="container clearfix">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <a id="get-promise" class="btn btn-info">Atidaryti</a>
                            </span>
                            <input name="promise-url" id="promise-url" class="form-control" placeholder="Internetinis adresas" type="text">
                        </div>
                        <!-- /input-group -->
                    </div>
                    <br>
                    <div id="result" class="col-lg-12">

                    </div>
                    <!-- end carousel -->
                </article>
                <hr>
            </div>

            <!-- BEGIN SIDEBAR -->

            <div id="sidebar" class="col-lg-4 col-md-4 col-sm-4 col-xs-12" style="margin-top: 25px;">

                <div class="widget text-center">
                    <h4 class="title">
                        <span>Pažadas</span>
                    </h4>
                    {{ form_start(form, {'attr':{'class': 'form-horizontal'} }) }}
                        {{ form_errors(form) }}
                            <input type="text" id="form_profile" name="profile" required="required" class="required fr_input_txt fr_97_5pro popupInput form-control" placeholder="Politikas">
                            {{ form_widget(form.title, {'attr': {'class': 'required fr_input_txt fr_97_5pro popupInput form-control', 'placeholder': 'Antraštė'} }) }}
                            {{ form_errors(form.title) }}
                            {{ form_widget(form.description, {'attr': {'class': 'required fr_input_txt fr_97_5pro partial_address form-control', 'placeholder': 'Pažado aprašymas'} }) }}
                            {{ form_errors(form.description) }}
                            <input type="hidden" name="result" id="result-shadow">
                            <input type="hidden" name="url" id="url-shadow">
                            <div class="pull-right">
                                <input type="submit" value="Išsaugoti" id="submit" class="button">
                            </div>
                        {{ form_widget(form._token) }}
                    {{ form_end(form) }}

                </div>

            </div>


        </div>
        <!-- end container -->
    </section><!-- end section -->

    <div id="result" style="width: 400px;">
    </div>


{% endblock %}
