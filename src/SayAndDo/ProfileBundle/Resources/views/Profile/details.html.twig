{% extends '::fullwidth.html.twig' %}

{% block breadcrumb %}
    <li>Profilio apžvalga</li>
    <li><a href="{{ path('say_and_do_profile_details', {'id':profile.getId()}) }}">{{ profile.getTitle() }}</a></li>
{% endblock %}

{% block header_title %}
    Profilio apžvalga
{% endblock %}

{% block inner_content %}
    <div class="author_box clearfix">
        <img class="img-circle alignleft" width="100" src="{{ asset('demos/team_02.png') }}" alt="">
        <h4>{{ profile.getTitle() }} - {{ profile.getPosition() }} <small>{{ profile.getPoliticalParty() }}</small></h4>
        <p>{{ profile.getDescription() }}</p>
        <div class="social_buttons">
            <a href="single-with-sidebar.html#" data-toggle="tooltip" data-placement="bottom" title="Facebook"><i class="fa fa-facebook"></i></a>
            <a href="single-with-sidebar.html#" data-toggle="tooltip" data-placement="bottom" title="Twitter"><i class="fa fa-twitter"></i></a>
            <a href="single-with-sidebar.html#" data-toggle="tooltip" data-placement="bottom" title="Google+"><i class="fa fa-google-plus"></i></a>
            <a href="single-with-sidebar.html#" data-toggle="tooltip" data-placement="bottom" title="Dribbble"><i class="fa fa-dribbble"></i></a>
        </div>
    </div>

    <div class="general-title text-center">
        <h3>Darbų statistika</h3>
        <hr>
    </div>
    <div class="skills text-center">
        <div class="col-lg-4 col-md-4 col-sm-4">
            <span class="chart" data-percent="90">
                <span class="percent">{{ tasks_confirmed|length }}</span>
            </span>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
            <span class="chart" data-percent="90">
                <span class="percent">{{ tasks_in_progress|length }}</span>
            </span>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
            <span class="chart" data-percent="90">
                <span class="percent">{{ tasks_done|length }}</span>
            </span>
        </div>
    </div>
    <div>
        <div class="col-lg-4 col-md-4 col-sm-4 first">
            <div class="widget">
                <h3 class="title">Darbai</h3>
                <ul class="check">
                    {% for task_confirmed in tasks_confirmed %}
                        <li>{{ task_confirmed.getTitle() }}</li>
                    {% endfor %}
                </ul>
            </div><!-- end widget -->
        </div><!-- large-6 -->
        <div class="col-lg-4 col-md-4 col-sm-4">
            <div class="widget">
                <h3 class="title">Vykdoma</h3>
                <ul class="check">
                    {% for task_in_progress in tasks_in_progress %}
                        <li>{{ task_in_progress.getTitle() }}</li>
                    {% endfor %}
                </ul>
            </div><!-- end widget -->
        </div><!-- large-6 -->
        <div class="col-lg-4 col-md-4 col-sm-4 last">
            <div class="widget">
                <h3 class="title">Atlikta</h3>
                <ul class="check">
                    {% for task_done in tasks_done %}
                        <li>{{ task_done.getTitle() }}</li>
                    {% endfor %}
                </ul>
            </div><!-- end widget -->
        </div><!-- large-6 -->
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        // Chart Effects;
        $('.chart').easyPieChart({
            easing: 'easeOutBounce',
            size : 180,
            animate : 2000,
            lineWidth : 10,
            lineCap : 'square',
            lineWidth : 18,
            barColor : '#3498db',
            trackColor : '#f9f9f9',
            scaleColor : false
        });
    </script>
{% endblock %}